{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeDigests",
    ":automergeBranch"
  ],
  "timezone": "Europe/Berlin",
  "schedule": ["before 6am on monday"],
  "labels": ["dependencies"],
  "assignees": ["@DanielWeeber"],
  "reviewers": ["@DanielWeeber"],
  "packageRules": [
    {
      "description": "Auto-merge patch and minor updates for production dependencies",
      "matchManagers": ["npm"],
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Auto-merge devDependencies updates",
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "minimumReleaseAge": "1 day"
    },
    {
      "description": "Group React ecosystem updates",
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^react", "^@types/react"],
      "groupName": "React ecosystem",
      "matchUpdateTypes": ["major"]
    },
    {
      "description": "Group Next.js ecosystem updates",
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^next", "@next/"],
      "groupName": "Next.js ecosystem",
      "matchUpdateTypes": ["major"]
    },
    {
      "description": "Group TypeScript ecosystem updates",
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^typescript", "^@types/"],
      "groupName": "TypeScript ecosystem",
      "matchUpdateTypes": ["major"]
    },
    {
      "description": "Group Tailwind CSS updates",
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["tailwind", "postcss", "autoprefixer"],
      "groupName": "Tailwind CSS ecosystem"
    },
    {
      "description": "Auto-merge GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true,
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Docker base image updates",
      "matchManagers": ["dockerfile"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "minimumReleaseAge": "7 days"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,
  "nodejs": {
    "minimumVersion": "18.0.0"
  },
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "branchConcurrentLimit": 10,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on monday"]
  }
}